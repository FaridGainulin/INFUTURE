.about-section

  &__container
    position relative
    z-index 1
    padding: 20px 0
    text-align: center
    +above($breakpoints.sm)
      text-align: start
      padding 60px 0
    +above($breakpoints.md)
      padding 80px 0
    +above($breakpoints.xxl)
      padding 126px 0

  &__box
    display: flex
    flex-direction: column-reverse
    align-items: center
    gap: 10px
    +above($breakpoints.sm)
      flex-direction: row
      align-items: flex-start
      gap: 20px
    +above($breakpoints.md)
      gap: 40px
    +above($breakpoints.xxl)
      gap: 71px

  &__img
    width 150px
    height: auto
    +above($breakpoints.sm)
      width 290px
    +above($breakpoints.md)
      width 388px
    +above($breakpoints.xxl)
      width 467px

  &__part
    width 85px
    +above($breakpoints.sm)
      width 100px
    +above($breakpoints.md)
      width 120px
    +above($breakpoints.xxl)
      width 133px

  &__title
    padding 10px 0 15px
    +above($breakpoints.sm)
      padding 15px 0 20px
    +above($breakpoints.md)
      padding 20px 0 25px
    +above($breakpoints.xxl)
      padding 28px 0 33px

  &__text
    display: flex
    flex-direction: column
    align-items: center
    gap: 7px
    +above($breakpoints.sm)
      align-items: flex-start
      gap: 13px
    +above($breakpoints.md)
      gap: 18px
    +above($breakpoints.xxl)
      gap: 22px

  &__block
    position relative
    width 100%
    background-color $color-grey
    border-radius: 8px
    padding 15px 5px 20px
    margin 10px 0 15px
    +above($breakpoints.sm)
      border-radius: 12px;
      padding: 20px 5px 20px 190px;
      margin: 15px 0 30px;
    +above($breakpoints.md)
      border-radius: 16px
      padding: 25px 5px 25px 260px;
      margin 20px 0 40px
    +above($breakpoints.xxl)
      border-radius: 20px
      padding 30px 5px 30px 302px
      margin 23px 0 54px

  &__block-img
    position: absolute
    width: 65px;
    height: auto;
    left: 5px;
    bottom: 0
    +above($breakpoints.sm)
      width 150px
      left: 15px
    +above($breakpoints.md)
      width 190px
      left: 25px
    +above($breakpoints.xxl)
      width 228px
      left: 30px

  &__form
    width 100%
    display: flex
    flex-direction: column
    align-items: center
    gap: 7px
    +above($breakpoints.sm)
      flex-direction: row
      flex-wrap: wrap
      justify-content space-between
      gap: 15px 10px
    +above($breakpoints.md)
      gap: 25px 12px
    +above($breakpoints.xxl)
      gap: 30px 14px
    input,
    button
      width 280px !important
      +above($breakpoints.sm)
        width 233px !important
      +above($breakpoints.md)
        width 310px !important
      +above($breakpoints.xxl)
        width 384px !important

  &__bottom-block
    display: flex
    align-items: center
    width 280px
    +above($breakpoints.sm)
      width max-content
      gap: 20px
    +above($breakpoints.md)
      gap: 25px
    +above($breakpoints.xxl)
      gap: 31px

  &__bottom-img
    width 50px
    height: auto
    +above($breakpoints.sm)
      width 90px
    +above($breakpoints.md)
      width 120px
    +above($breakpoints.xxl)
      width 133px

  &__agree-wrapper
    width 100%
    color: #CECECE
    padding 10px 0 0
    +above($breakpoints.sm)
      padding: 14px 40px 0 495px;
    +above($breakpoints.md)
      padding: 16px 110px 0 660px;
    +above($breakpoints.xxl)
      padding 18px 160px 0 800px;
