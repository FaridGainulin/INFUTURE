.main-section

  &__container
    background-image: url('../images/main-section-bg.png')
    background-repeat: no-repeat
    background-size: cover
    background-position center
    background-color #1F1F1F
    position relative
    z-index 1
    padding 20px
    +above($breakpoints.sm)
      padding 30px 5px 30px 30px
    +above($breakpoints.md)
      padding 50px 10px 50px 55px
    +above($breakpoints.xxl)
      padding 74px 10px 74px 80px

  &__sub-title
    padding 10px 0 240px
    +above($breakpoints.sm)
      padding 4px 0 100px
    +above($breakpoints.md)
      padding 4px 0 180px
    +above($breakpoints.xxl)
      padding 4px 0 255px

  &__bottom
    display: flex
    flex-direction: column
    align-items: center
    gap: 10px
    +above($breakpoints.sm)
      align-items: flex-start
      gap: 15px
    +above($breakpoints.md)
      gap: 20px
    +above($breakpoints.xxl)
      gap: 22px

  &__form
    display: flex
    flex-direction: column
    align-items: center
    gap: 7px
    +above($breakpoints.sm)
      flex-direction: row
      gap: 10px
    +above($breakpoints.md)
      gap: 12px
    +above($breakpoints.xxl)
      gap: 14px
    & > *
      width 230px !important
      +above($breakpoints.sm)
        width 220px !important
      +above($breakpoints.md)
        width 270px !important
      +above($breakpoints.xxl)
        width 329px !important

  &__agree-wrapper
    width 100%
    padding 10px 0 0
    +above($breakpoints.sm)
      padding: 14px 40px 0 460px;
    +above($breakpoints.md)
      padding: 16px 140px 0 565px;
    +above($breakpoints.xxl)
      padding 18px 150px 0 686px
