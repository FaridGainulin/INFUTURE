.invest-section

  &__container
    position relative
    z-index 1
    padding-bottom 35px
    +above($breakpoints.sm)
      padding-bottom 50px
    +above($breakpoints.md)
      padding-bottom 80px
    +above($breakpoints.xxl)
      padding-bottom 126px

  &__img-bg
    position: absolute
    width: 100%
    height: 38px
    top: 58px
    left: 0
    +above($breakpoints.sm)
      top: 66px
      height: 77px
    +above($breakpoints.md)
      top: 93px
      height: 103px
    +above($breakpoints.xxl)
      top: 114px
      height: 125px

  &__part
    width 115px
    +above($breakpoints.sm)
      width 120px
    +above($breakpoints.md)
      width 160px
    +above($breakpoints.xxl)
      width 176px

  &__title
    padding-top 20px
    +above($breakpoints.sm)
      padding-top 20px
    +above($breakpoints.md)
      padding-top 25px
    +above($breakpoints.xxl)
      padding-top 28px

  &__sub-title
    padding-bottom 20px
    text-align: end
    +above($breakpoints.sm)
      padding-bottom 30px
    +above($breakpoints.md)
      padding-bottom 50px
    +above($breakpoints.xxl)
      padding-bottom 70px

  &__cards
    +above($breakpoints.sm)
      display: flex
      justify-content center
      gap: 10px
    +above($breakpoints.md)
      gap: 20px

  &__card
    position relative
    width 280px !important
    border-radius: 8px
    display: flex
    flex-direction: column
    background-color $color-grey
    padding-bottom 20px
    +above($breakpoints.sm)
      border-radius: 12px
      width 358px !important
      padding-bottom 25px
    +above($breakpoints.md)
      border-radius: 16px
      width 473px !important
      padding-bottom 35px
    +above($breakpoints.xxl)
      border-radius: 20px
      width 580px !important
      padding-bottom 40px

  &__card-img-1
    position: absolute
    width: 140px;
    height: auto;
    top: 37px;
    right: 10px;
    +above($breakpoints.sm)
      width: 210px;
      top: 42px;
      right: 16px;
    +above($breakpoints.md)
      width: 290px;
      top: 49px;
      right: 19px;
    +above($breakpoints.xxl)
      width 346px
      top: 49px
      right: 31px

  &__card-img-2
    position: absolute
    width: 110px;
    height: auto;
    top: 22px;
    right: 14px;
    +above($breakpoints.sm)
      width: 150px;
      top: 35px;
      right: 22px;
    +above($breakpoints.md)
      width: 210px;
      top: 40px;
      right: 29px;
    +above($breakpoints.xxl)
      width 267px
      top: 40px
      right: 29px

  &__card-title
    display: flex
    justify-content center
    align-items: center
    width 43%
    height: 40px
    background-color #696969
    border-radius: 8px 0 8px 0
    +above($breakpoints.sm)
      border-radius: 12px 0 12px 0
      height: 45px
    +above($breakpoints.md)
      border-radius: 16px 0 16px 0
      height: 55px
    +above($breakpoints.xxl)
      border-radius: 20px 0 20px 0
      height: 60px

  &__card-text,
  &__btn
    margin-left 20px
    +above($breakpoints.sm)
      margin-left 30px
    +above($breakpoints.md)
      margin-left 35px
    +above($breakpoints.xxl)
      margin-left 40px

  &__card-text
    padding 70px 0 16px
    +above($breakpoints.sm)
      padding 100px 0 16px
    +above($breakpoints.md)
      padding 120px 0 18px
    +above($breakpoints.xxl)
      padding 146px 0 20px

  &__btn
    width 200px !important
    +above($breakpoints.sm)
      width 200px !important
    +above($breakpoints.md)
      width 260px !important
    +above($breakpoints.xxl)
      width 305px !important
