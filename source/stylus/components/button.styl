.btn
  height: 40px
  width 100%
  user-select: none
  position: relative
  display: flex;
  justify-content: center
  align-items: center
  overflow: hidden
  color: #fff
  border-radius: 30px
  background: #A369D0
  font-family: 'GothamPro-Regular'
  font-weight: 400
  font-size: 12px
  line-height: 120%
  transition transform 0.5s, top 0.8s
  +above($breakpoints.sm)
    font-size: 13px;
    height: 45px;
  +above($breakpoints.md)
    font-size: 15px;
    height: 53px;
  +above($breakpoints.xxl)
    font-size: 16px;
    height: 60px

  &:hover
    transform: scale(1.02)

  &:active
    top: 3px

  &--call-me
    color: #F1F1F1
    font-size: 10px
    height: 25px
    width 120px
    +above($breakpoints.sm)
      font-size: 10px;
      height: 30px;
      width 130px
    +above($breakpoints.md)
      font-size: 11px;
      height: 33px;
      width 140px
    +above($breakpoints.xxl)
      font-size: 12px;
      height: 37px
      width 157px

  &--main
    height: 45px
