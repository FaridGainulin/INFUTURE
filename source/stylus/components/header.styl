.header
  &__container
    display: flex
    justify-content space-between
    align-items: center
    padding 15px 0 0
    +above($breakpoints.sm)
      padding 20px 0
    +above($breakpoints.md)
      padding 25px 0
    +above($breakpoints.xxl)
      padding 30px 0

  &__brand-block
    +above($breakpoints.sm)
      display: flex
      align-items: center
      gap: 15px
    +above($breakpoints.md)
      gap: 22px
    +above($breakpoints.xxl)
      gap: 28px

  &__logo
    width 126px
    height: 21px
    +above($breakpoints.sm)
      width 156px
      height: 26px
    +above($breakpoints.md)
      width 180px
      height: 30px
    +above($breakpoints.xxl)
      width 205px
      height: 34px

  &__brand
    display: none
    +above($breakpoints.sm)
      display: block

  &__brand-mobile
    padding 10px 0
    margin 10px 0 20px
    text-align: center
    background-color $color-grey
    +above($breakpoints.sm)
      display: none
