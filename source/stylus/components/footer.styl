.footer

  &__container
    display: flex
    align-items: center
    flex-direction: column
    gap: 10px
    padding 15px 0
    +above($breakpoints.sm)
      flex-direction: row
      justify-content space-between
      padding 20px 0
    +above($breakpoints.md)
      padding 25px 0
    +above($breakpoints.xxl)
      padding 30px 0

  &__brand-block
    +above($breakpoints.sm)
      display: flex
      align-items: center
      gap: 15px
    +above($breakpoints.md)
      gap: 22px
    +above($breakpoints.xxl)
      gap: 28px

  &__logo
    width 126px
    height: 21px
    +above($breakpoints.sm)
      width 156px
      height: 26px
    +above($breakpoints.md)
      width 180px
      height: 30px
    +above($breakpoints.xxl)
      width 205px
      height: 34px

  &__brand
    display: none
    +above($breakpoints.sm)
      display: flex
      flex-direction: column
      gap: 2px
    +above($breakpoints.md)
      gap: 3px
    +above($breakpoints.xxl)
      gap: 4px

  &__privacy,
  &__privacy-mobile
    cursor pointer
    text-decoration: underline

  &__privacy-mobile
    +above($breakpoints.sm)
      display: none
